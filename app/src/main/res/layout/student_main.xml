<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="right"
            android:textSize="13pt"
            android:textColor="#23C77B"
            android:text="[대충 로고]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/namae"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textSize="16pt"
                android:textColor="#23C77B"
                android:textStyle="bold"
                android:text="[대충 이름]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="16pt"
                android:textColor="#23C77B"
                android:textStyle="bold"
                android:text="님,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="16pt"
            android:textColor="#23C77B"
            android:textStyle="bold"
            android:text="반갑습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/main_mawari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="#353535"
        android:textSize="10pt"
        android:layout_margin="20dp"
        android:text="현재 시각"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/thistime"
        android:textColor="#353535"
        android:textSize="12pt"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="[대충 시각]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/main_mawari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#353535"
            android:textSize="10pt"
            android:layout_margin="20dp"
            android:text="현재 위치"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/location"
            android:textColor="#353535"
            android:textSize="12pt"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="[대충 현재위치]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/main_mawari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:textColor="#353535"
                android:textSize="10pt"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="어디로 갈까요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/haruzongil"
                android:padding="10dp"
                android:text="하루 종일"
                android:textColor="#23C77B"></Button>
        </LinearLayout>
        <Spinner
            android:background="@drawable/xml_border"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/spin_heya"
            android:layout_width="200dp"
            android:layout_height="40dp"></Spinner>
    </LinearLayout>
</LinearLayout>